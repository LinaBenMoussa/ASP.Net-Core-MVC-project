@{
    ViewData["Title"] = "Add Destination";
    Layout = "_AdminLayout";

}
@model RoomModel
<br />

<br />
<div class="position-absolute top-50 start-50 translate-middle">


    <h1>Edit Room</h1>
    <br />
    <form asp-action="EditRoom" asp-route-id="@Model.IdRoom" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Type</label>
            <select name="type">
                @if (@Model.Type == "Art Déco")
                {
                    <option selected>Art Déco</option>
                }
                else
                {
                    <option>Art Déco</option>
                }
                @if (@Model.Type == "Boutique")
                {
                    <option selected>Boutique</option>
                }
                else
                {
                    <option>Boutique</option>
                } 
                @if (@Model.Type == "Luxe")
                {
                    <option selected>Luxe</option>
                }
                else
                {
                    <option>Luxe</option>
                }
            </select>

            </div>

            <div class="form-group">
                <label>Nb of Guests</label><br />
                <select name="nbpersonne">
                    @for (int i = 1; i < 4; i++)
                    {
                        if (Model.Nbpersonne == i)
                        {
                            <option selected>@i</option>
                        }
                        else
                        {
                            <option>@i</option>

                }
                }
            </select>
        </div>
        <div class="form-group">
            <label>Hotel</label>
           @* <input value="@ViewData["nom"]" class="form-control" name="hotel" type="text"  />*@
           <select name="hotel">
                @foreach(var h in (List<Hotel>)ViewData["hotels"])
                {
                    if (@ViewData["nom"] == h.Nom)
                    {
                        <option selected>@h.Nom</option>
                    }
                    else {<option >@h.Nom</option>}
                }
                
            </select>
        </div>

        <div class="form-group">
            <label>Price</label>
            <input value="@Model.prixRoom" class="form-control" name="prix" type="text" />
        </div>

        <br /><br />
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
