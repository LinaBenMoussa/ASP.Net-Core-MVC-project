@{
    ViewData["Title"] = "Add Destination";
    Layout = "_AdminLayout";

}
@model List<Destination>
<br />

<br />
<div class="position-absolute top-50 start-50 translate-middle">


    <h1>Add Hotel</h1>
    <br />
    <form asp-action="AddRoom" asp-route-id="@ViewData["id"]" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Type</label>
            <select name="type">
                <option>Art Déco</option>
                <option>Luxe</option>
                <option>Boutique</option>
            </select>
        </div>

        <div class="form-group">
            <label>Nb of Guests</label><br />
            <select name="nbpersonne">
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>
        </div>
        <div class="form-group">
            <label>Hotel</label>
            <input value="@ViewData["name"]" class="form-control" name="hotel" type="text" readonly/>
        </div>

        <div class="form-group">
            <label>Price</label>
            <input class="form-control" name="prix" type="text" />
        </div>
        
        <br /><br />
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
